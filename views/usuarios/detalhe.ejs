<!DOCTYPE html>
<html>
  <head>
    <title>Usuário</title>
    <link rel='stylesheet' href='/stylesheets/style.css' />
     <!-- CSS only -->
     <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-Zenh87qX5JnK2Jl0vWa8Ck2rdkQ2Bzep5IDxbcnCeuOxjzrPF/et3URy9Bv1WTRi" crossorigin="anonymous">
     <!-- JavaScript Bundle with Popper -->
     <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-OERcA2EqjJCMA+/3y+gxIOqMEjwtxJY7qPCqsdltbNJuaOe923+mo//f6V8Qbsw3" crossorigin="anonymous"></script>
  </head>
  <body>
    <div class="conteudo">
      <div>
        <nav class="navbar navbar-expand-lg">
          <div class="container-fluid">
            <div class="collapse navbar-collapse" id="navbarNav">
              <img src="/assets/logo.png"  alt="..." >
  
              <ul class="navbar-nav">
                <li class="nav-item">
                </li>
                <li class="nav-item">
                  <a class="nav-link active" aria-current="page" href="../">Home</a>
                </li>
                <li class="nav-item">
                  <a class="nav-link" href="#locais">Restaurantes</a>
                </li>
                <li class="nav-item">
                  <a class="nav-link" href="/usuarios">Cadastre-se</a>
                </li>
              </ul>
            </div>
          </div>
        </nav>
      </div>
      <h1>Detalhes do usuário</h1>
      <p>
      </p>
      <div class="texto">

      <p>
          <strong>Nome: </strong> <%= usuarios.nome %><br>
          <strong>Sexo: </strong> <%= usuarios.sexo %><br>
          <strong>Email: </strong> <%= usuarios.email %><br> 
          <strong>Data de Nascimento: </strong><input type="date" value="<%= usuarios.idade %>"></span><br> 
          <strong>Uso Localização: </strong> <%= usuarios.usoLocalizacao %><br>   
          <strong>Tipo usuário: </strong> <%= usuarios.tipoUsuario %><br>   

      </p>

      <% if (typeof(errors) !="undefined" ) { %>
        <div style="color: red; border: 1px solid red;">
          <ul>
            <% for(var i=0; i < errors.length; i++) { %>
              <li>
                <%= errors[i] %>
              </li>
              <% } %>
          </ul>
        </div>
      <% } %>
      <div class="col" style="margin-top: 5%;">
        <form action="/usuarios/deletar/<%= usuarios.id %>" method="POST">
          <button type="submit" class="btn btn-dark mb-2">Excluir</button>
        </form>

        <form action="/usuarios/editar/<%= usuarios.id %>" method="POST">
          <button type="submit" class="btn btn-primary mb-2">Editar</button>
        </form>

        <a href="/usuarios" class="btn btn-secondary active" role="button" aria-pressed="true">Voltar</a> 
    
      </div>
    </div>
  </div>
  </body>
</html>
