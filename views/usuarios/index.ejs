<!DOCTYPE html>
<html>
  <head>
    <title>Usuário</title>
    <link rel='stylesheet' href='/stylesheets/style.css' />
    <!-- CSS only -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-Zenh87qX5JnK2Jl0vWa8Ck2rdkQ2Bzep5IDxbcnCeuOxjzrPF/et3URy9Bv1WTRi" crossorigin="anonymous">
    <!-- JavaScript Bundle with Popper -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-OERcA2EqjJCMA+/3y+gxIOqMEjwtxJY7qPCqsdltbNJuaOe923+mo//f6V8Qbsw3" crossorigin="anonymous"></script>
  </head>
  <body class="background_form">
    <div style="background-color: white;">
      <nav class="navbar navbar-expand-lg">
        <div class="container-fluid">
          <div class="collapse navbar-collapse" id="navbarNav">
            <img src="/assets/logo.png"  alt="..." >

            <ul class="navbar-nav">
              <li class="nav-item">
              </li>
              <li class="nav-item">
                <a class="nav-link active" aria-current="page" href="../">Home</a>
              </li>
              <li class="nav-item">
                <a class="nav-link" href="#locais">Restaurantes</a>
              </li>
              <li class="nav-item">
                <a class="nav-link" href="/usuarios">Cadastre-se</a>
              </li>
            </ul>
          </div>
        </div>
      </nav>
    </div>
    <br><br>
    <div class="conteudo" style="background-color: white; border-radius: 15px; padding: 10px;">
      <h1>Usuários</h1>

      <div class="texto">
        <p style="text-align:right;">
          <a href="/usuarios/novo" class="btn btn-primary btn-lg active" role="button" aria-pressed="true">Novo usuário</a>
        </p>
        <!---<p><a href="/usuarios/novo_juridica">Criar usuário pessoa jurídica</a></p> -->
        <p>Usuários</p>

          <table class="table">
            <thead>
              <tr>
                <td>Nome</td>
                <td>E-mail</td>
                <td>Tipo</td>
                <td>Detalhes</td>

              </tr>
            </thead>
            <tbody>
              
                <% for(var i=0; i < usuarios.length; i++){ %>
                  <tr>
                  <td><%= usuarios[i].nome %></td>
                  <td><%= usuarios[i].email %></td>
                  <td><%= usuarios[i].tipoUsuario %></td>
                  <td> <a href="/usuarios/<%= usuarios[i].id %>" class="btn btn-primary btn-sm active" role="button" aria-pressed="true">Visualizar</a></td>

                </tr>
                <%  } %>

              
             

        </tbody>
        </table>

      
      </div>

      </div>
   
      
      
  </body>
</html>
