<!DOCTYPE html>
<html>
  <head>
    <title>Editar Usuario</title>
    <link rel='stylesheet' href='/stylesheets/style.css' />
     <!-- CSS only -->
     <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-Zenh87qX5JnK2Jl0vWa8Ck2rdkQ2Bzep5IDxbcnCeuOxjzrPF/et3URy9Bv1WTRi" crossorigin="anonymous">
     <!-- JavaScript Bundle with Popper -->
     <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-OERcA2EqjJCMA+/3y+gxIOqMEjwtxJY7qPCqsdltbNJuaOe923+mo//f6V8Qbsw3" crossorigin="anonymous"></script>
  </head>
  <body class="background_form">
    <div style="background-color: white;">
      <nav class="navbar navbar-expand-lg">
        <div class="container-fluid">
          <div class="collapse navbar-collapse" id="navbarNav">
            <img src="/assets/logo.png"  alt="..." >

            <ul class="navbar-nav">
              <li class="nav-item">
              </li>
              <li class="nav-item">
                <a class="nav-link active" aria-current="page" href="../">Home</a>
              </li>
              <li class="nav-item">
                <a class="nav-link" href="#locais">Restaurantes</a>
              </li>
              <li class="nav-item">
                <a class="nav-link" href="/usuarios">Cadastre-se</a>
              </li>
            </ul>
          </div>
        </div>
      </nav>
    </div>
    <br><br>
    <div class="conteudo-form">

    <div class="texto-form">
    

    <% if (typeof(errors) !="undefined" ) { %>
      <div style="color: red; border: 1px solid red;">
        <ul>
          <% for(var i=0; i < errors.length; i++) { %>
            <li>
              <%= errors[i] %>
            </li>
            <% } %>
        </ul>
      </div>
    <% } %>

    <div class="row">
      <div class="col-md-3"></div>
      <div class="col-md-6" style="background-color: white; border-radius: 15px; padding: 10px;">
        <h1>Editar Usuario</h1>
        <form action="/usuarios/update/<%= usuarios.id %>" method="POST">
          <div class="form-group">
            <label for="nome">Nome:</label>
            <input type="text" class="form-control" name="nome" id="nome" placeholder="Insira seu nome completo" value="<%= usuarios.nome %>">
          </div>
    
          <% if (usuarios.sexo == "Masculino" ) { %>
            <div>
              <label for="localizacao">Selecione seu sexo</label>
            </div>
           
            <div class="form-check-inline">
              <div class="form-check form-check-inline">
                <input checked class="form-check-input" type="radio" name="sexo" id="sexo" value="Masculino">
                <label class="form-check-label" for="sexo">
                  Masculino
                </label>
              </div>
              <div class="form-check form-check-inline">
                <input class="form-check-input" type="radio" name="sexo" id="sexo" value="Feminino">
                <label class="form-check-label" for="sexo">
                  Feminino
                </label>
              </div>
            </div>
          <% } else { %>
            <div>
              <label for="localizacao">Selecione seu sexo</label>
            </div>
           
            <div class="form-check-inline">
              <div class="form-check form-check-inline">
                <input class="form-check-input" type="radio" name="sexo" id="sexo" value="Masculino">
                <label class="form-check-label" for="sexo">
                  Masculino
                </label>
              </div>
              <div class="form-check form-check-inline">
                <input checked class="form-check-input" type="radio" name="sexo" id="sexo" value="Feminino">
                <label class="form-check-label" for="sexo">
                  Feminino
                </label>
              </div>
            </div>
            <% } %>
    
          <div class="form-group ">
            <label for="email">Email</label>
            <input type="email" class="form-control" name="email" id="email" placeholder="eu@reservai.com" value="<%= usuarios.email %>">
          </div>
    
          <div class="form-group ">
            <label for="idade">Data de nascimento</label>
            <input type="date" class="form-control" name="idade" id="idade" placeholder="Insira sua data de nascimento" value="<%= usuarios.idade %>">
          </div>
    
          <div class="form-group ">
            <label for="exampleInputPassword1">Criar senha:</label>
            <input type="password" class="form-control" name="passwd" id="passwd" placeholder="Password" value="<%= usuarios.senha %>">
          </div>
    
          <div>
            <label for="localizacao">Permitir o uso de minha localização:</label>
          </div>
    
          <% if (usuarios.local == "Nao" ) { %>
          <div class="form-check-inline">
            <div class="form-check">
              <input class="form-check-input" type="radio" name="local" id="local" value="Sim" checked>
              <label class="form-check-label" for="local">
                Sim
              </label>
            </div>
            <div class="form-check">
              <input checked class="form-check-input" type="radio" name="local" id="local" value="Nao">
              <label class="form-check-label" for="local">
                Não
              </label>
            </div>
          </div> 
          <% } else { %>
            <div class="form-check-inline">
              <div class="form-check">
                <input checked class="form-check-input" type="radio" name="local" id="local" value="Sim" checked>
                <label class="form-check-label" for="local">
                  Sim
                </label>
              </div>
              <div class="form-check">
                <input class="form-check-input" type="radio" name="local" id="local" value="Nao">
                <label class="form-check-label" for="local">
                  Não
                </label>
              </div>
            </div> 
          <% } %>
    
          <div class="col"  style="margin-top: 5%;">
            <button type="submit" class="btn btn-primary">Editar</button>
            <a href="/usuarios" class="btn btn-secondary active" role="button" aria-pressed="true">Voltar</a> 
            <br><br>
          </div>
        </form>
      </div>
      <div class="col-md-3"></div>
    </div>

    </div>
    </div>
  </body>
</html>
